{
  "plugins": ["@typescript-eslint", "jest-dom", "testing-library"],
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never",
        "tsx": "never"
      }
    ]
  },
  "env": {
    "jest": true
  }
}
